---
import Error404 from "../components/Error404.astro";
---

<body class="background">
    <main>
        <Error404 />
    </main>
</body>

<style is:global>
    :root {
        --glass-background: rgba(50, 32, 22, 0.85);
        --glass-blur: blur(17px) saturate(180%);
        --glass-border: rgba(239, 234, 210, 0.125);
        --glass-shadow: 0 10px 15px -3px rgba(88, 60, 43, 0.1);
        --white-color: rgb(248, 246, 238);
    }
    body {
        display: flex;
        flex-direction: column;
        background-color: var(--white-color); /* Color de respaldo */
        overflow-x: hidden; /* Evitar scroll horizontal */
    }
    .background {
        position: sticky;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("/image/fondo_carteras.png");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        z-index: -1; /* Asegura que el fondo esté detrás del contenido */
    }
    @media (max-width: 768px) {
        body {
            background-attachment: fixed;
        }
    }
</style>
