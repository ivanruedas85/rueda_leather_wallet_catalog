---
import Layout from '../layouts/Layout.astro';
import Products from '../data/products.json';
import CominSoonCard from '../components/CominSoonCard.astro'

const { products } = Products || { products: [] };

// Función para generar slugs consistentes
const generateSlug = (category) => {
  if (!category) return '';
  return category.toLowerCase().replace(/\s+/g, '-');
};

// Función para obtener la imagen de una categoría
const getCategoryImage = (category) => {
  if (!category) return '/image/cominsoon.png';
  return products.find((product) => product.category === category)?.image || '/image/cominsoon.png';
};

// Obtener categorías únicas
const categories = products.length > 0
  ? [...new Set(products.map((product) => product.category))]
  : [];
---

<Layout>
  <main>
    <h1>Nuestros Productos</h1>

    {categories.length > 0 ? (
      <div class="categories-grid">
        {categories.map((category) => {
          const categorySlug = generateSlug(category);
          const categoryImage = getCategoryImage(category);

          return (
            <a href={`/productos/${categorySlug}`} class="category-card">
              <div class="category-image-container">
                <img src={categoryImage} alt={`Imagen de la categoría ${category}`} />
              </div>
              <h2>{category}</h2>
              <span class="view-more">Ver productos →</span>
            </a>
          );
        })}
      </div>
    ) : (
      <p class="no-categories">No hay categorías disponibles en este momento.</p>
    )}
    <CominSoonCard />
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    color: white;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }

  .category-card {
    background: var(--glass-background);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .category-card:hover {
    transform: translateY(-4px);
  }

  .category-image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .category-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-image-container img {
    transform: scale(1.05);
  }

  h2 {
    color: white;
    font-size: 1.5rem;
    margin: 1rem;
    text-align: center;
  }

  .view-more {
    color: var(--white-color);
    font-size: 0.875rem;
    margin: 0 1rem 1rem;
    text-align: center;
    display: block;
  }

  .no-categories {
    text-align: center;
    color: white;
    font-size: 1.25rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    .categories-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }
</style>