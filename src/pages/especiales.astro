---
import Layout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.astro";
import { isSpecialActive } from "../utils/dateUtils";
import SpecialProducts from "../data/SpecialProducts.json";

if (!isSpecialActive()) {
    return Astro.redirect("/484");
}
---

<Layout>
    <main>
        <div class="special-header">
            <h1>游꾸 El regalo perfecto para pap치 est치 aqu칤</h1>
            <p class="promotion-text">
                Sorpr칠ndelo con una cartera de cuero elegante y duradera.
            </p>
            <dl>
                <dt>游녶 Carteras para caballero:</dt>
                <dd class="">Piel genuina</dd>
                <dd class="">Dise침os modernos y cl치sicos</dd>
                <dd class="">Calidad premium</dd>
            </dl>
            <div class="countdown-banner">
                <p>游늱 Solo disponible hasta el 15 de junio</p>
            </div>
        </div>
        <div class="product-grid">
            {SpecialProducts.map((product) => <ProductCard {...product} />)}
