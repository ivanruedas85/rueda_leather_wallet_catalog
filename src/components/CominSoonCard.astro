---
// filepath: c:\Users\Ivan Rueda\Documents\Github\Astro\rueda_leather_wallet_catalog\src\components\CominSoonCard.astro
const message = "¡Próximamente más productos!";
const imageUrl = "/image/cominsoon.webp";
---

<div class="coming-soon-card">
  <div class="image-container">
    <img src={imageUrl} alt="Próximamente" />
  </div>
  <div class="message">
    <h2>{message}</h2>
  </div>
</div>

<style>
  .coming-soon-card {
    background: var(--glass-background);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: clamp(1rem, 2.5vw, 2rem); /* Ajuste dinámico del padding */
    text-align: center;
    margin: 2rem auto;
    min-height: 200px;
    width: 100%;
    max-width: 600px; /* Limitar el ancho máximo */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: var(--glass-shadow);
  }

  .image-container {
    width: 100%;
    max-width: 250px; /* Ajuste dinámico del tamaño de la imagen */
    height: auto;
    overflow: hidden;
    border-radius: 8px;
  }

  .image-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s ease; /* Animación suave */
  }

  .coming-soon-card:hover .image-container img {
    transform: scale(1.05); /* Efecto de zoom al pasar el cursor */
  }

  .message h2 {
    font-size: clamp(1.25rem, 2vw, 1.75rem); /* Tamaño dinámico del texto */
    color: var(--white-color);
    margin: 1rem 0 0;
  }

  @media (max-width: 768px) {
    .coming-soon-card {
      padding: 1rem;
      margin: 1.5rem auto;
      min-height: 180px;
    }

    .image-container {
      max-width: 200px; /* Reducir el tamaño de la imagen en pantallas pequeñas */
    }

    .message h2 {
      font-size: 1.25rem; /* Ajustar el tamaño del texto */
    }
  }

  @media (max-width: 480px) {
    .coming-soon-card {
      padding: 0.75rem;
      margin: 1rem auto;
      min-height: 150px;
      max-width: 85%;
    }

    .image-container {
      max-width: 150px; /* Imagen más pequeña en pantallas muy pequeñas */
    }

    .message h2 {
      font-size: 1rem; /* Texto más pequeño en pantallas muy pequeñas */
    }
  }
</style>