---
// filepath: c:\Users\Ivan Rueda\Documents\Github\Astro\rueda_leather_wallet_catalog\src\components\CominSoonCard.astro
const message = "¡Próximamente más productos!";
const imageUrl = "/image/cominsoon.webp";
---

<div class="coming-soon-card">
  <div class="image-container">
    <img src={imageUrl} alt="Próximamente" />
  </div>
  <div class="message">
    <h2>{message}</h2>
  </div>
</div>

<style>
  .coming-soon-card {
    background: var(--glass-background);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    grid-column: 1 / -1;
    margin-top: 2rem;
    height: 300px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .image-container {
    width: 100%;
    max-width: 300px;
    height: auto;
    overflow: hidden;
    border-radius: 8px;
  }

  .image-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .message h2 {
    font-size: 1.5rem;
    color: var(--white-color);
    margin: 0;
  }

  @media (max-width: 768px) {
    .coming-soon-card {
      padding: 1.5rem;
      margin-top: 1.5rem;
      height: 250px;
    }

    .message h2 {
      font-size: 1.25rem;
    }
  }
</style>