---
import WahtsAppButton from './WhatsAppButton.astro';
import Modal from './Modal.astro';

interface Props {
    id: string;
    title: string;
    description: string;
    image: string;
}
const {id, title, description, image} = Astro.props;
const whatsapMessage = `Hola me interesa obtener más información sobre ${title}`;
---
<Modal id={id}>
    <div class="modal-product-details">
        <img src={image} alt={title} class="modal-image" />
        <div class="modal-info">
            <h2>{title}</h2>
            <div class="modal-description">
                <h3>Descripción del producto</h3>
                <p>{description}</p>
            </div>
            <div class="modal-features">
                <h3>Características</h3>
                <ul>
                    <li>!00% Artesanal</li>
                    <li>Cosido a mano</li>
                    <li>Personalizados</li>
                </ul>
            </div>
            <WahtsAppButton message={whatsapMessage} />
        </div>
    </div>
</Modal>

<style>
  .modal-product-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 2rem;

    .modal-image {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 8px;
    }

    .modal-info {
      display: flex;
      flex-direction: column;
      gap: 1rem;

      h2 {
        margin: 0;
        font-size: 1.75rem;
        color: var(--white-color);
      }
    }

    .modal-description,
    .modal-features {
      h3 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        color: var(--white-color);
      }
    }

    .modal-features {
      list-style-type: none;
      padding: 0;
      margin: 0;

      li {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;

        &::before {
          content: "";
          position: absolute;
          left: 0;
          color: #2563eb;
        }
      }
    }
  }

  /* Estilos para pantallas medianas (tabletas) */
  @media (max-width: 768px) {
    .modal-product-details {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem;

      .modal-image {
        height: 200px;
      }

      .modal-info h2 {
        font-size: 1.5rem;
      }

      .modal-description h3,
      .modal-features h3 {
        font-size: 1.25rem;
      }
    }
  }

  /* Estilos para pantallas pequeñas (móviles) */
  @media (max-width: 480px) {
    .modal-product-details {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;

      .modal-image {
        height: 150px;
        width: 100%;
      }

      .modal-info h2 {
        font-size: 1.25rem;
      }

      .modal-description h3,
      .modal-features h3 {
        font-size: 1rem;
      }

      .modal-features li {
        font-size: 0.875rem;
        padding-left: 1rem;

        &::before {
          left: -0.5rem;
        }
      }
    }
  }
</style>